// tsconfig.json
{
  // Указывает отдельные файлы, которые необходимо явно включить в компиляцию.
  "files": [],


  // Подключает другие конфигурационные файлы, создавая многофайловую конфигурацию.
  "references": [
    { "path": "./tsconfig.app.json" },   // Конфигурация для React-приложения.
    { "path": "./tsconfig.node.json" }   // Конфигурация для окружения Node.js.
  ],


  // Указывает набор файлов и папок, которые будут включены для проверки типов.
  "include": [
    "*src/**/*.ts",                     // Все .ts-файлы внутри директории src.
    "./src/**/*.tsx",                   // Все .tsx-файлы внутри директории src.
    "./src/app/types/global.d.ts",      // Глобальные определения типов.
    "vite.config.ts"                    // Конфигурационный файл для Vite.
  ],


  // Общие параметры компилятора, которые будут применяться ко всем конфигурациям.
  "compilerOptions": {
    // Включает JSX-трансформацию React, не требующую явного импорта React.
    "jsx": "react-jsx",

    // Настройка псевдонимов (alias), чтобы использовать более короткие пути для импорта.
    "paths": {
      "@/*": ["./src/*"]
    },


    // Разрешает дефолтные импорты модулей, которые не используют синтаксис ES-модулей.
    "allowSyntheticDefaultImports": true
  }
}


